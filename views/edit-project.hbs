<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../assets/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-white shadow">
      <div class="container-fluid mt-2">
        <a class="navbar-brand mx-2" href="#">
          <img src="../assets/img/logo.png" alt="Bootstrap" width="50" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-3 d-flex gap-3">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="project">Add Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="testimonials">Testimonials</a>
            </li>
          </ul>
          <a
            class="btn btn-primary bg-black rounded-pill border-0 p-2 px-3 fw-normal text-decoration-none"
            href="contact"
          >Contact Me</a>
        </div>
      </div>
    </nav>

    <div class="d-flex flex-column mx-auto mt-5" style="width: 500px">
      <h1 class="fw-bold mb-4 mx-auto">Edit Project</h1>
      <form
        method="post"
        action="/edit-project/{{data.id}}"
        enctype="multipart/form-data"
      >
        <input type="hidden" name="id" value="{{data.id}}" />
        <div class="mb-3">
          <label for="" class="form-label fw-semibold">Project Name</label>
          <input
            type="text"
            class="form-control"
            id=""
            name="title"
            value="{{data.title}}"
          />
        </div>

        <div class="d-flex">
          <div class="mb-3">
            <label for="" class="form-label fw-semibold">Start Date</label>
            <input
              type="date"
              class="form-control"
              id=""
              name="start"
              value="{{data.start}}"
            />
          </div>
          <div class="mb-3 ms-auto">
            <label for="" class="form-label fw-semibold">End Date</label>
            <input
              type="date"
              class="form-control"
              id=""
              name="end"
              value="{{data.end}}"
            />
          </div>
        </div>
        <div class="mb-3">
          <label
            for="exampleFormControlTextarea1"
            class="form-label fw-semibold"
          >Description</label>
          <textarea
            class="form-control"
            id="exampleFormControlTextarea1"
            rows="3"
            style="resize: none; height: 120px"
            name="description"
            value="{{data.description}}"
          ></textarea>
        </div>

        <label for="" class="form-label fw-semibold">Technologies</label>

        <div class="d-flex flex-wrap gap-5 ms-0 mb-3">
          <div class="d-flex flex-column gap-3 me-4 fw-medium">
            <div class="form-check">
              {{#each data.technology}}
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="{{this}}"
                  id="flexCheckDefault"
                  name="technology[]"
                />
              {{/each}}
              <label class="form-check-label" for="flexCheckDefault">
                Node JS
              </label>
            </div>
            <div class="form-check">
              {{#each data.technology}}
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="{{this}}"
                  id=""
                  name="technology[]"
                />
              {{/each}}
              <label class="form-check-label" for=""> Laravel </label>
            </div>
          </div>

          <div class="d-flex flex-column gap-3 fw-medium">
            <div class="form-check">
              {{#each data.technology}}
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="{{this}}"
                  id="flexCheckDefault"
                  name="technology[]"
                />
              {{/each}}
              <label class="form-check-label" for="flexCheckDefault">
                React JS
              </label>
            </div>
            <div class="form-check">
              {{#each data.technology}}
                <input
                  class="form-check-input"
                  type="checkbox"
                  value="{{this}}"
                  id=""
                  name="technology[]"
                />

              {{/each}}
              <label class="form-check-label" for=""> Angular </label>
            </div>
          </div>

        </div>
        <div class="mb-3 mt-0 w-100">
          <label for="formFile" class="form-label fw-semibold">Upload Image</label>
          <input
            class="form-control"
            type="file"
            id="formFile"
            name="image"
            value="../uploads/{{data.image}}"
          />
        </div>

        <div class="text-sm-end">
          <button class="btn btn-outline-success me-3 px-4" type="submit">
            Edit
          </button>
        </div>
      </form>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/js/all.min.js"
      integrity="sha512-u3fPA7V8qQmhBPNT5quvaXVa1mnnLSXUep5PS1qo5NRzHwG19aHmNJnj1Q8hpA/nBWZtZD4r4AX6YOt5ynLN2g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="../assets/js/project.js"></script>
  </body>
</html>